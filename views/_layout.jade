doctype 5
html
  head
    title="EnerNOC Open Data Viz!"
    meta(name='description', content="View interactive open data")

    meta(name="viewport", content="initial-scale=1.0, width=device-width, user-scalable=no")
    //- link(rel="icon", type="image/png", href="/static/favicon.ico")
    //- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons 
    link( href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.0/css/bootstrap.min.css", 
          rel="stylesheet")
    link( href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.0/css/bootstrap-responsive.min.css", 
          rel="stylesheet")
    != css('custom')

    block head

  body
    .navbar.navbar-inverse.navbar-fixed-top
       .navbar-inner
          .container
            a.brand( href="/" ) ENOC Open Data
            ul#navTop.nav
              block nav
              li
                a
                  i.icon-spinner.icon-large.icon-spin( style='display:none' )

            .nav-collapse.collapse.pull-right
              ul.nav
                block nav-right


    block outer

    .container.main
      block content

    script( src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.0/jquery.min.js", 
      type='text/javascript')
    script( src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.0/bootstrap.min.js", 
      type='text/javascript')

    block footer
